<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".MainActivity">

    <ImageButton
        android:id="@+id/backButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_back"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/titleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Transaction"
        android:textSize="20sp"
        android:textColor="#000000"
        app:layout_constraintTop_toTopOf="@id/backButton"
        app:layout_constraintBottom_toBottomOf="@id/backButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <LinearLayout
        android:id="@+id/transactionTypeLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/titleTextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <Button
            android:id="@+id/incomeButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Income"
            android:textColor="#171717"
            android:background="@android:color/transparent" />

        <Button
            android:id="@+id/expenseButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Expense"
            android:textColor="#171717"
            android:background="@android:color/transparent" />
    </LinearLayout>

    <TextView
        android:id="@+id/amountTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="R0.00"
        android:textSize="36sp"
        android:textColor="#FF7F16"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/transactionTypeLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/enterAmountTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter amount"
        android:textSize="16sp"
        android:textColor="#737373"
        app:layout_constraintTop_toBottomOf="@id/amountTextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <LinearLayout
        android:id="@+id/fieldsLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="24dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        app:layout_constraintTop_toBottomOf="@id/enterAmountTextView">

        <Button
            android:id="@+id/choosePayeeButton"
            android:layout_width="match_parent"
            android:layout_height="58dp"
            android:text="Choose Payee"
            android:textAlignment="textStart"
            android:paddingStart="16dp"
            android:drawableStart="@drawable/person_ic"
            android:drawableEnd="@drawable/arrow_right_ic"
            android:layout_marginBottom="16dp" />

        <Button
            android:id="@+id/chooseCategoryButton"
            android:layout_width="match_parent"
            android:layout_height="58dp"
            android:text="Choose Category"
            android:textAlignment="textStart"
            android:paddingStart="16dp"
            android:drawableStart="@drawable/sell_ic"
            android:drawableEnd="@drawable/arrow_right_ic"
            android:layout_marginBottom="16dp" />

        <Button
            android:id="@+id/selectAccountButton"
            android:layout_width="match_parent"
            android:layout_height="58dp"
            android:text="Select Account"
            android:textAlignment="textStart"
            android:paddingStart="16dp"
            android:drawableStart="@drawable/wallet_ic"
            android:drawableEnd="@drawable/arrow_right_ic"
            android:layout_marginBottom="16dp" />

        <Button
            android:id="@+id/dateButton"
            android:layout_width="match_parent"
            android:layout_height="58dp"
            android:text="Today, 2025"
            android:textAlignment="textStart"
            android:paddingStart="16dp"
            android:drawableStart="@drawable/calendar_today_ic"
            android:drawableEnd="@drawable/arrow_right_ic"
            android:layout_marginBottom="16dp" />

        <EditText
            android:id="@+id/descriptionEditText"
            android:layout_width="match_parent"
            android:layout_height="58dp"
            android:hint="Add description"
            android:paddingStart="16dp"
            android:drawableStart="@drawable/comment_ic"
            android:background="@drawable/edit_text_background"
            android:layout_marginBottom="16dp" />

        <Button
            android:id="@+id/addReceiptButton"
            android:layout_width="match_parent"
            android:layout_height="58dp"
            android:layout_marginBottom="16dp"
            android:drawableStart="@drawable/receipt_ic"
            android:drawableEnd="@drawable/add_ic"
            android:paddingStart="16dp"
            android:text="Add Receipt"
            android:textAlignment="textStart"
            android:textColorLink="#2196F3" />

        <Button
            android:id="@+id/repeatButton"
            android:layout_width="match_parent"
            android:layout_height="58dp"
            android:text="Repeat"
            android:textAlignment="textStart"
            android:paddingStart="16dp"
            android:drawableStart="@drawable/autorenew_ic"
            android:drawableEnd="@drawable/arrow_right_ic" />

    </LinearLayout>

    <Button
        android:id="@+id/addTransactionButton"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:text="Add Transaction"
        android:textColor="#FFFFFF"
        android:background="#3B82F6"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="24dp"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>